{% for monitor in uptime_kuma_monitors %}
# {{ monitor.name }}:
#   Type: {{ monitor.type }}
{% if monitor.type == 'http' %}
#   URL: {{ monitor.url }}
#   Accepted Status: {{ monitor.accepted_statuscodes | join(', ') }}
{% if monitor.ignoreTls | default(false) %}
#   Ignore TLS: Yes
{% endif %}
{% elif monitor.type == 'ping' %}
#   Hostname: {{ monitor.hostname }}
{% endif %}
#   Interval: {{ monitor.interval }}s
#
{% endfor %}
