x-logging: &default-logging
  driver: json-file
  options:
    max-size: "100m"
    max-file: "3"

services:
  uptime-kuma:
    image: louislam/uptime-kuma:{{ uptime_kuma_version }}
    container_name: uptime-kuma
    restart: unless-stopped
    logging: *default-logging
    ports:
      - "{{ uptime_kuma_port }}:3001"
    volumes:
      - {{ uptime_kuma_data_dir }}:/app/data
    environment:
      - TZ={{ uptime_kuma_timezone }}
    # Health check
    healthcheck:
      test: ["CMD", "node", "-e", "require('http').get('http://localhost:3001/api/status-page/heartbeat', (r) => process.exit(r.statusCode === 200 ? 0 : 1))"]
      interval: 30s
      timeout: 10s
      retries: 3

# ============================================
# Monitors to configure in Web UI:
