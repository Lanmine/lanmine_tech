# n8n environment variables
# Managed by Ansible - do not edit manually

# Database
N8N_DB_NAME={{ n8n_db_name }}
N8N_DB_USER={{ n8n_db_user }}
N8N_DB_PASSWORD={{ n8n_secrets.db_password }}

# Security
N8N_ENCRYPTION_KEY={{ n8n_secrets.encryption_key }}

# Webhook/Host settings
N8N_WEBHOOK_URL={{ n8n_webhook_url }}
N8N_HOST=n8n.lionfish-caiman.ts.net

# Timezone
N8N_TIMEZONE={{ n8n_timezone }}

# Execution settings
N8N_EXECUTIONS_DATA_SAVE_ON_ERROR={{ n8n_executions_data_save_on_error }}
N8N_EXECUTIONS_DATA_SAVE_ON_SUCCESS={{ n8n_executions_data_save_on_success }}
N8N_EXECUTIONS_DATA_MAX_AGE={{ n8n_executions_data_max_age }}

# OAuth2 Proxy (Authentik SSO)
OAUTH2_CLIENT_ID={{ authentik_secrets.n8n_client_id }}
OAUTH2_CLIENT_SECRET={{ authentik_secrets.n8n_client_secret }}
OAUTH2_COOKIE_SECRET={{ n8n_secrets.oauth2_cookie_secret }}

