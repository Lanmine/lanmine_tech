# n8n Docker Compose
# Managed by Ansible - do not edit manually
# Database: External PostgreSQL on postgres-01 (10.0.10.23)

x-logging: &default-logging
  driver: json-file
  options:
    max-size: "100m"
    max-file: "3"

services:
  redis:
    image: redis:7-alpine
    restart: unless-stopped
    logging: *default-logging
    command: redis-server --appendonly yes
    volumes:
      - redis-data:/data
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5

  n8n:
    image: n8nio/n8n:{{ n8n_version }}
    restart: unless-stopped
    logging: *default-logging
    depends_on:
      redis:
        condition: service_healthy
    extra_hosts:
      - "prometheus.lanmine.local:10.0.10.40"
    ports:
      - "{{ n8n_web_port }}:5678"
    environment:
      # Database (external PostgreSQL)
      DB_TYPE: postgresdb
      DB_POSTGRESDB_HOST: ${N8N_DB_HOST}
      DB_POSTGRESDB_PORT: ${N8N_DB_PORT}
      DB_POSTGRESDB_DATABASE: ${N8N_DB_NAME}
      DB_POSTGRESDB_USER: ${N8N_DB_USER}
      DB_POSTGRESDB_PASSWORD: ${N8N_DB_PASSWORD}
      # Queue mode with Redis
      EXECUTIONS_MODE: queue
      QUEUE_BULL_REDIS_HOST: redis
      QUEUE_BULL_REDIS_PORT: 6379
      # Security
      N8N_ENCRYPTION_KEY: ${N8N_ENCRYPTION_KEY}
      N8N_API_DISABLED: "false"
      N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS: "true"
      N8N_BLOCK_ENV_ACCESS_IN_NODE: "true"
      N8N_GIT_NODE_DISABLE_BARE_REPOS: "true"
      # Task runners (scaling)
      N8N_RUNNERS_ENABLED: "true"
      OFFLOAD_MANUAL_EXECUTIONS_TO_WORKERS: "true"
      # Webhook URL (for external access)
      WEBHOOK_URL: ${N8N_WEBHOOK_URL}
      N8N_HOST: ${N8N_HOST}
      N8N_PORT: 5678
      N8N_PROTOCOL: https
      # Timezone
      GENERIC_TIMEZONE: ${N8N_TIMEZONE}
      TZ: ${N8N_TIMEZONE}
      # Execution settings
      EXECUTIONS_DATA_SAVE_ON_ERROR: ${N8N_EXECUTIONS_DATA_SAVE_ON_ERROR}
      EXECUTIONS_DATA_SAVE_ON_SUCCESS: ${N8N_EXECUTIONS_DATA_SAVE_ON_SUCCESS}
      EXECUTIONS_DATA_MAX_AGE: ${N8N_EXECUTIONS_DATA_MAX_AGE}
      # Node environment
      NODE_ENV: production
    volumes:
      - {{ n8n_install_dir }}/data:/home/node/.n8n

  n8n-worker:
    image: n8nio/n8n:{{ n8n_version }}
    restart: unless-stopped
    logging: *default-logging
    depends_on:
      - n8n
    extra_hosts:
      - "prometheus.lanmine.local:10.0.10.40"
    command: worker
    environment:
      DB_TYPE: postgresdb
      DB_POSTGRESDB_HOST: ${N8N_DB_HOST}
      DB_POSTGRESDB_PORT: ${N8N_DB_PORT}
      DB_POSTGRESDB_DATABASE: ${N8N_DB_NAME}
      DB_POSTGRESDB_USER: ${N8N_DB_USER}
      DB_POSTGRESDB_PASSWORD: ${N8N_DB_PASSWORD}
      EXECUTIONS_MODE: queue
      QUEUE_BULL_REDIS_HOST: redis
      QUEUE_BULL_REDIS_PORT: 6379
      N8N_ENCRYPTION_KEY: ${N8N_ENCRYPTION_KEY}
      N8N_ENFORCE_SETTINGS_FILE_PERMISSIONS: "true"
      N8N_BLOCK_ENV_ACCESS_IN_NODE: "true"
      N8N_RUNNERS_ENABLED: "true"
      OFFLOAD_MANUAL_EXECUTIONS_TO_WORKERS: "true"
      GENERIC_TIMEZONE: ${N8N_TIMEZONE}
      TZ: ${N8N_TIMEZONE}
      NODE_ENV: production
    volumes:
      - {{ n8n_install_dir }}/data:/home/node/.n8n

volumes:
  redis-data:
