# Akvorado Docker Compose
# Managed by Ansible - do not edit manually

services:
  zookeeper:
    image: zookeeper:3.9
    restart: unless-stopped
    volumes:
      - zookeeper-data:/data
      - zookeeper-datalog:/datalog

  kafka:
    image: bitnami/kafka:3.6
    restart: unless-stopped
    depends_on:
      - zookeeper
    environment:
      KAFKA_CFG_ZOOKEEPER_CONNECT: zookeeper:2181
      KAFKA_CFG_LISTENERS: PLAINTEXT://:9092
      KAFKA_CFG_ADVERTISED_LISTENERS: PLAINTEXT://kafka:9092
      ALLOW_PLAINTEXT_LISTENER: "yes"
    volumes:
      - kafka-data:/bitnami/kafka

  clickhouse:
    image: clickhouse/clickhouse-server:24
    restart: unless-stopped
    ulimits:
      nofile:
        soft: 262144
        hard: 262144
    volumes:
      - {{ clickhouse_data_dir }}:/var/lib/clickhouse

  akvorado:
    image: ghcr.io/akvorado/akvorado:{{ akvorado_version }}
    restart: unless-stopped
    depends_on:
      - kafka
      - clickhouse
    command: orchestrator
    ports:
      - "{{ akvorado_web_port }}:8080"
    volumes:
      - ./akvorado.yaml:/etc/akvorado/akvorado.yaml:ro

  akvorado-inlet:
    image: ghcr.io/akvorado/akvorado:{{ akvorado_version }}
    restart: unless-stopped
    depends_on:
      - akvorado
    command: inlet
    ports:
      - "{{ akvorado_netflow_port }}:2055/udp"
      - "{{ akvorado_sflow_port }}:6343/udp"
      - "{{ akvorado_ipfix_port }}:4739/udp"
    volumes:
      - ./akvorado.yaml:/etc/akvorado/akvorado.yaml:ro

volumes:
  zookeeper-data:
  zookeeper-datalog:
  kafka-data:
